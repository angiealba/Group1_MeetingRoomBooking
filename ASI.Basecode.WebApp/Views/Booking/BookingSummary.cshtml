@model IEnumerable<ASI.Basecode.Data.Models.Booking>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/main.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" rel="stylesheet" integrity="sha512-mSYUmp1HYZDFaVKK//63EcZq4iFWFjxSL+Z3T/aCt4IO9Cejm03q3NKKYN6pFQzY0SBOr8h+eCIAZHPXcpZaNw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/css/style.css" rel="stylesheet">
</head>
<h1 class="fw-bold mb-3">Bookings</h1>
<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title mb-3">Filter Bookings</h5>
        <form method="GET" action="@Url.Action("BookingSummary")">
            <div class="row g-3">
                <div class="col-md-3">
                    <label for="room" class="form-label">Room</label>
                    <select id="room" name="room" class="form-select">
                        <option value="">All Rooms</option>
                        @foreach (var room in ViewBag.Rooms)
                        {
                            if (ViewBag.SelectedRoom == room.Value)
                            {
                                <option value="@room.Value" selected>@room.Text</option>
                            }
                            else
                            {
                                <option value="@room.Value">@room.Text</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="date" class="form-label">Date</label>
                    <input type="date" id="date" name="date" class="form-control"
                           value="@ViewBag.SelectedDate?.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-3">
                    <label for="userName" class="form-label">User</label>
                    <input type="text" id="userName" name="userName" class="form-control"
                           placeholder="Enter user name" value="@ViewBag.SelectedUser">
                        
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-success me-1">
                        Apply Filters
                    </button>
                    <a href="@Url.Action("BookingSummary")" class="btn btn-secondary">
                        Reset
                    </a>
                </div>

               
            </div>
        </form>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Booking Reference</th>
                <th>Room</th>
                <th>Name</th>
                <th>Date</th>
                <th>Time</th>
                <th>Duration</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var booking in Model)
                {
                    <tr>
                        <td>@booking.bookingRefId</td>
                        <td>@(booking.Room != null ? booking.Room.roomName : "Room Unavailable")</td>
                        <td>@(booking.User != null ? booking.User.userID : "User Not Found")</td>
                        <td>@booking.date.ToString("MM/dd/yyyy")</td>
                        <td>@booking.time.ToString("HH:mm")</td>
                        <td>@booking.duration hour(s)</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No bookings found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="mt-3 small text-muted">
    <p>* Booking IDs are unique identifiers for each reservation</p>
</div>